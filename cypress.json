{
    "integrationFolder": "cypress/integration/tests",
    "testFiles": "**/*.{feature,features}",
    "ignoreTestFiles": [
        "*.js",
        "*Manual.feature"
    ],
    "reporter": "@joethefkingfrypan/mochawesome-junit-reporter",
    "reporterOptions": {
        "reportDir": "results/mochaFiles",
        "mochaFile": "results/mochaFiles/output-[hash].xml",
        "overwrite": false,
        "html": false,
        "json": true
    },
    "screenshotsFolder": "results/visuals",
    "videosFolder": "results/visuals",
    "chromeWebSecurity": false
}